{
  "version": 2,
  "buildCommand": "cd client && npm run build",
  "outputDirectory": "client/.next",
  "installCommand": "cd client && npm install",
  "framework": "nextjs",
  "functions": {
    "client/app/api/**/*.ts": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://grochain-backend.vercel.app/api/$1"
    }
  ]
}
